{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<h1 style="text-align:center; padding-top:40px;">Inscription</h1>

<div class="container">
    <div class="row">
    
    {{ form_start(registrationForm) }}

    {{ form_row(registrationForm.name, {
            label: 'Nom'
        }) }}
    {{ form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
          {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.address, {
            label: 'Adresse'
        }) }}
        {{ form_row(registrationForm.phone, {
            label: 'Téléphone'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: "Accepter les conditions d'utilisation"
        }) }}

        <button type="submit" class="btn" style="background-color: #c7acd1; color:#ffffff; float: right;">Valider</button>
    {{ form_end(registrationForm) }}
    
        </div>
    </div>
{% endblock %}
